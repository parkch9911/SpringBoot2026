package com.green.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

@Controller
public class MovieController {
	
	@GetMapping("/movie/reserve")
	public String reservation() {
		//html파일명
		return "movieReserve";
	}
	
	@PostMapping("/movie/reserveConfirm")
	public String confirm(
			@RequestParam("title") String title,
			@RequestParam("date") String date,
			@RequestParam("time") String time,
			@RequestParam("quantity") int quantity,
			@RequestParam("name") String name
			) {
		ModelAndView mv =new ModelAndView();
		mv.addObject("new_title", title);
		mv.addObject("new_date", date);
		mv.addObject("new_time", time);
		mv.addObject("new_quantity", quantity);
		mv.addObject("new_name", name);
		mv.addObject("new_total", 11000*quantity);
		
		
		return "";	
	}
}

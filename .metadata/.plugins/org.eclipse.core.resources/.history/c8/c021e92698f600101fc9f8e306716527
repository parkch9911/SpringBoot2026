package com.green.controller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

@Controller
public class BookController {
	
	@GetMapping("/book/rental")
	public String BookRental() {
		return "bookRental";
	}
	
	@PostMapping("/book/rentalProc")
	public ModelAndView BookRentalProc(
			@RequestParam("bookname") ArrayList<String> bookname,
			@RequestParam("author") ArrayList<String> author,
			@RequestParam("isbn") ArrayList<String> isbn,
			@RequestParam("username") ArrayList<String> username,
			@RequestParam("rentdate") ArrayList<String> rentdate
			) {

		ModelAndView mv = new ModelAndView();
		for(int i=0; i<bookname.size(); i++) {
			mv.addObject("new_rentdate",rentdate);
			mv.addObject("new_bookname",bookname);
			mv.addObject("new_author",author);
			mv.addObject("new_isbn",isbn);
			mv.addObject("new_username",username);
			mv.setViewName("bookRentalProc");
		}
	
		return mv;
	}
}
